<jtlshopplugin>
	<Name>Landswitcher</Name>
	<Description>Landswitcher test plugin</Description>
	<Author>Antonov Vladyslav</Author>
	<URL>https://www.jtl-software.de</URL>
	<XMLVersion>100</XMLVersion>
	<ShopVersion>5.0.0</ShopVersion>
	<Icon>preview.png</Icon>
